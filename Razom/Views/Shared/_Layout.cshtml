<!DOCTYPE html> 
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <link href="@Url.Content("~/Content/reset.css")" media="screen" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/grid_12.css")" media="screen" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/style.css")" media="screen" rel="stylesheet" type="text/css" />
        <link href="http://fonts.googleapis.com/css?family=Lato:300italic" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
        
        @if (IsSectionDefined("AdditionalCSS"))
        {
            @RenderSection("AdditionalCSS",required: false)
        }
        <script type="text/javascript" src="@Url.Content("~/Scripts/Bilbo_400.font.js")"></script>
        <script type="text/javascript" src="@Url.Content("/Scripts/cufon-replace.js")"></script>
        <script type="text/javascript" src="@Url.Content("/Scripts/cufon-yui.js")"></script>
        <script type="text/javascript" src="@Url.Content("/Scripts/html5.js")"></script>
        <script type="text/javascript" src="@Url.Content("/Scripts/jquery.easing.1.3.js")"></script>
        <script type="text/javascript" src="@Url.Content("/Scripts/jquery-1.7.min.js")"></script>
        <script type="text/javascript" src="@Url.Content("/Scripts/tms-0.4.1.js")"></script>
        <script type="text/javascript" src="@Url.Content("/Scripts/bootstrap.js")"></script>
        <script type="text/javascript" src="@Url.Content("/Scripts/bootstrap.min.js")"></script>
        <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")"></script>
        <script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/bootstrap.min.css")
        @Styles.Render("~/Content/bootstrap-responsive.min.css")
        @Styles.Render("~/Content/css")
        @*@Scripts.Render("~/bundles/modernizr")*@
    </head>
    <body>
        <header>
            <div>
              <div>
                  <h1><a href="/"><img src="/Images/logo.png" alt=""></a></h1>
                  <nav>
                    <ul class="menu">
                      <li>@Html.ActionLink("Головна", "Index", "Home")</li>
                        @{Html.RenderAction("MyPlacesButton", "Place");}
                        @{Html.RenderAction("MyTripsButton", "Trip");}
                        @{Html.RenderAction("AccountButton", "Account");}
                      <li>@Html.ActionLink("Що це?","About","Home")</li>
                        @{Html.RenderAction("PanelButton", "Admin");}
                    </ul>
                  </nav>
                <div class="clear"></div>
                </div>
            </div>
        </header>
        @if (IsSectionDefined("SliderCode"))
        {
            @RenderSection("SliderCode",required: false)
        }
        <section id="content">
            @RenderSection("featured", required: false)
            @RenderBody()
        </section>
        
        
        <footer>
            <p>© 2014 Разом <br />
            Developed by brainiac, dollhead, heaventlysmile</p>
            <div class="soc-icons"><span>Follow Us:</span><a href="#"><img src="/Images/icon-1.jpg" alt=""></a><a href="#"><img src="/Images/icon-2.jpg" alt=""></a><a href="#"><img src="/Images/icon-3.jpg" alt=""></a></div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
