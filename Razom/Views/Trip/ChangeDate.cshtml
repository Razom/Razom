@model Razom.Models.TripDate

@{
    ViewBag.Title = "Змінити зату";
}

@section AdditionalCSS{
       
    }
<div class="clear"></div>
<div style="left:5%; position:relative;">
    <h2>Зміна дати</h2>

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(m => m.ID)
        
        @Html.LabelFor(m => m.Start, "Дата початку")
        @Html.TextBoxFor(m => m.Start, htmlAttributes: new {@class = "datepicker", data_date_format = System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.ShortDatePattern.ToLower() })
        
        <br />
        @Html.LabelFor(m => m.Finish, "Дата кінця")
        @Html.TextBoxFor(m => m.Finish, htmlAttributes: new { @class = "form-control", @style = "width:20%" })

        <br />
        <input type="submit" value="Зберегти" class="btn btn-success" />
    }

</div>
