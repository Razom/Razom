@model Razom.Models.Trip

@{
    ViewBag.Title = "Створення подорожі";
}


<div style="left:5%; position:relative;">
    <h2>Створення подорожі</h2>
    @using (Html.BeginForm("Create", "Trip", FormMethod.Post))
    {
        <div class="form-horizontal">
            
            @Html.LabelFor(m => m.Name, "Назва подорожі")
            @Html.TextBoxFor(m => m.Name, htmlAttributes: new { @class = "form-control", @style = "width:20%" })

            @Html.LabelFor(m => m.Start, "Дата початку")
            @Html.TextBoxFor(m => m.Start, htmlAttributes: new { @class = "form-control", @style="width:20%" })

            <br />
            @Html.LabelFor(m => m.Finish, "Дата кінця")
            @Html.TextBoxFor(m => m.Finish, htmlAttributes: new { @class = "form-control", @style = "width:20%" })

            <br />
            <input type="submit" value="Продовжити" class="btn btn-success" style="margin-top:2%"/>
            </div>
    }
</div>