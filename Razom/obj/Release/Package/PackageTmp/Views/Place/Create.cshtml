@model Razom.Models.PlaceCreator

@{
    ViewBag.Title = "Місце";
}

<div style="left:5%; position:relative;">
    <h2>Створення подорожі</h2>
    @using (Html.BeginForm("Create", "Place", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        
        <div class="form-horizontal">
            
            @Html.LabelFor(m => m.Place.Name, "Назва місця")
            @Html.TextBoxFor(m => m.Place.Name, htmlAttributes: new { @class = "form-control", @style = "width:20%" })
            
            <br />

            @Html.LabelFor(m => m.Place.Address, "Адреса місця")
            @Html.TextBoxFor(m => m.Place.Address, htmlAttributes: new { @class = "form-control", @style = "width:20%" })

            <br />
            @Html.LabelFor(m => m.SelectedPlaceType, "Тип місця")
            @Html.DropDownListFor(m => m.SelectedPlaceType, Model.PlaceTypes)
            
            <br />
            @Html.LabelFor(m => m.SelectedCity, "Місто")
            @Html.DropDownListFor(m => m.SelectedCity, Model.Cities)

            <br />
            <label for="file">Фото</label>
            <input type="file" name="files" value="Виберіть фотографії" multiple="multiple"/>

            <br />
            <input type="submit" value="Продовжити" class="btn btn-success" style="margin-top:2%"/>
            </div>
    }
</div>